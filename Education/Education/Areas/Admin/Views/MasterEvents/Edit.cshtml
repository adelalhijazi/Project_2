@model Education.Areas.Admin.ViewModels.MasterEventsViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="pagetitle">
    <h2>MasterEvents</h2>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MasterEvents">MasterEvents</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MasterEventsId" />
            <input type="hidden" asp-for="CreateUser" />
            <input type="hidden" asp-for="CreateDate" />
            <div class="form-group">
                <label asp-for="MasterEventsTitle" class="control-label"></label>
                <input asp-for="MasterEventsTitle" class="form-control" />
                <span asp-validation-for="MasterEventsTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasterEventsDate" class="control-label"></label>
                <input asp-for="MasterEventsDate" class="form-control" />
                <span asp-validation-for="MasterEventsDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasterEventsDescription" class="control-label"></label>
                <textarea asp-for="MasterEventsDescription" class="form-control"></textarea>
                <span asp-validation-for="MasterEventsDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasterEventsFile" class="control-label"></label>
                <input asp-for="MasterEventsFile" class="form-control" />
                <span asp-validation-for="MasterEventsFile" class="text-danger"></span>
                <input type="hidden" asp-for="MasterEventsImageUrl" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" style="margin-left:295%" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success" style="margin-left:91%">Back to List</a>
</div>

