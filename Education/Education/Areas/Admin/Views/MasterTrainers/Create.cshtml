@model Education.Areas.Admin.ViewModels.MasterTrainersViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="pagetitle">
    <h2>MasterTrainers</h2>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MasterTrainers">MasterTrainers</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="MasterTrainersId" class="form-control" type="hidden" value="0" />
            <div class="form-group">
                <label asp-for="MasterTrainersTitle" class="control-label"></label>
                <input asp-for="MasterTrainersTitle" class="form-control" />
                <span asp-validation-for="MasterTrainersTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasterTrainersBreef" class="control-label"></label>
                <input asp-for="MasterTrainersBreef" class="form-control" />
                <span asp-validation-for="MasterTrainersBreef" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasterTrainersDescription" class="control-label"></label>
                <textarea asp-for="MasterTrainersDescription" class="form-control"></textarea>
                <span asp-validation-for="MasterTrainersDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasterTrainersIcon" class="control-label"></label>
                <input asp-for="MasterTrainersIcon" class="form-control" />
                <span asp-validation-for="MasterTrainersIcon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasterTrainersIconUrl" class="control-label"></label>
                <input asp-for="MasterTrainersIconUrl" class="form-control" />
                <span asp-validation-for="MasterTrainersIconUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasterTrainersFile" class="control-label"></label>
                <input asp-for="MasterTrainersFile" type="file" class="form-control" />
                <span asp-validation-for="MasterTrainersFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="margin-left:295%" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success" style="margin-left:91%">Back to List</a>
</div>

